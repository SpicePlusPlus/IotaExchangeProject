<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.twl02.exchangedesktop.rates.Rates"
            vbarPolicy="ALWAYS" hbarPolicy="NEVER">

<GridPane alignment="center" hgap="10.0" prefHeight="475.0" prefWidth="480.0" styleClass="root" stylesheets="@rates.css"
          vgap="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <Label styleClass="header" text="LBP Exchange Rate" textAlignment="CENTER" GridPane.columnSpan="2"
           GridPane.halignment="CENTER"/>
    <Label styleClass="value" text="Buy USD rates" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <Label fx:id="buyUsdRateLabel" styleClass="value-label" text="Not available" GridPane.columnIndex="0"
           GridPane.rowIndex="3"/>
    <Label styleClass="value" text="Sell USD Rate" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <Label fx:id="sellUsdRateLabel" styleClass="value-label" text="Not available" GridPane.columnIndex="1"
           GridPane.rowIndex="3"/>
    <Separator prefHeight="0.0" prefWidth="457.0" GridPane.RowIndex="4" GridPane.columnIndex="0"
               GridPane.columnSpan="2"/>
    <TextField fx:id="usdTextField" styleClass="value" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
    <Label fx:id="usdTextFieldLabel" styleClass="value-label" text="enter USD" GridPane.columnIndex="0"
           GridPane.rowIndex="5"/>
    <TextField fx:id="lbpTextField" styleClass="value" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <Label fx:id="lbpTextFieldLabel" styleClass="value-label" text="enter LBP" GridPane.columnIndex="1"
           GridPane.rowIndex="5"/>
    <RadioButton text="Buy USD" GridPane.rowIndex="7">
        <toggleGroup>
            <ToggleGroup fx:id="transactionType" toggles=""/>
        </toggleGroup>
    </RadioButton>
    <RadioButton text="Sell USD" toggleGroup="$transactionType" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
    <Button onAction="#addTransaction" prefHeight="26.0" prefWidth="235.0" text="Add Transaction"
            GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="8"/>
    <Label fx:id="errorMessage" styleClass="error-message" text="" GridPane.columnIndex="0" GridPane.columnSpan="2"
           GridPane.rowIndex="9"/>
    <columnConstraints>
        <ColumnConstraints/>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>
    <Separator prefHeight="0.0" prefWidth="457.0" GridPane.RowIndex="10" GridPane.columnIndex="0"
               GridPane.columnSpan="2"/>
    <Label styleClass="header" text="Calculator" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.RowIndex="11"
           GridPane.halignment="CENTER"/>
    <TextField fx:id="usdTextFieldCalc" styleClass="value" GridPane.columnIndex="1" GridPane.rowIndex="13"/>
    <Label fx:id="usdTextFieldLabelCalc" styleClass="value-label" text="enter USD" GridPane.columnIndex="1"
           GridPane.rowIndex="12"/>
    <TextField fx:id="lbpTextFieldCalc" styleClass="value" GridPane.columnIndex="0" GridPane.rowIndex="13"/>
    <Label fx:id="lbpTextFieldLabelCalc" styleClass="value-label" text="enter LBP" GridPane.columnIndex="0"
           GridPane.rowIndex="12"/>
    <RadioButton text="LBP to USD" GridPane.rowIndex="14">
        <toggleGroup>
            <ToggleGroup fx:id="transactionTypeCalc" toggles=""/>
        </toggleGroup>
    </RadioButton>
    <RadioButton text="USD to LPB" toggleGroup="$transactionTypeCalc" GridPane.columnIndex="1" GridPane.rowIndex="14"/>
    <Button onAction="#calculateAmount" prefHeight="26.0" prefWidth="235.0" text="Calculate"
            GridPane.columnSpan="2" GridPane.halignment="CENTER" GridPane.rowIndex="18"/>

</GridPane>
</ScrollPane>


